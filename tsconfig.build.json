{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "target": "ES2023",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/__tests__/**"
  ]
}
